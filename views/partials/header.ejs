<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Short URL</title>
  <link rel="icon" type="image/png" href="/url.png">
  <link rel="stylesheet" href="/assets/css/styles.css">
  <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
<header class="container">
  <!-- mobile version  -->
  <div class="navbar  mobile-nav">
    <div class="logo">sab.io</div>

    <button class="settings-btn mobile-settings-btn" aria-label="Settings">
      <i class="fa-solid fa-bars         menu-btn"></i>
      <i class="fa-solid fa-circle-xmark x-btn"></i>
    </button>

    <!-- Popup Div -->
    <div class="settings-item mobile-settings-item hidden">
      <% if (locals.loggedUser) { %>
        <a href="/"><i class="fa-solid fa-house"></i><span>Home</span></a>
        <a href="<%= process.env.BASE_URL %>/dashboard"><i class="fa-solid fa-file"></i><span>dashboard </span></a>
        <a class="dark-btn" href="#"><i class="fa-solid fa-moon"></i><span>Dark Mood</span></a>
        <a class="light-btn" href="#"><i class="fa-solid fa-sun"></i><span>light Mood</span></a>
        <a class="logout-btn" href="/logout"><i class="fa-solid fa-right-from-bracket"></i><span>Logout</span></a>
      <% } else { %>
        <a href="/"><i class="fa-solid fa-house"></i><span>Home</span></a>
        <a href="<%= process.env.BASE_URL %>/login"><i class="fa-solid fa-user"></i><span>Login</span></a>
        <a href="<%= process.env.BASE_URL %>/register"><i class="fa-solid fa-pen-to-square"></i><span>Register</span></a>
        <a class="dark-btn" href="#"><i class="fa-solid fa-moon"></i><span>Dark Mood</span></a>
        <a class="light-btn" href="#"><i class="fa-solid fa-sun"></i><span>light Mood</span></a>
      <% } %>  

    </div>
  </div>

    <!-- desktop version  -->
    <div  class="navbar  desktop-nav">
      <div class="logo">sab.io</div>
  
      <nav class="nav-links">
        <a href="/">Home</a>
        <% if (locals.loggedUser) { %>
        <a href="<%= process.env.BASE_URL %>/dashboard">dashboard</a>
        <% }else{ %>
        <a href="<%= process.env.BASE_URL %>/login">Login</a>
        <a href="<%= process.env.BASE_URL %>/register">Register</a>
        <% } %>
      </nav>
  
      <button class="settings-btn desktop-settings-btn" aria-label="Settings">
        <i class="fa-solid fa-gear"></i>
      </button> 
  
      <!-- Popup Div -->
      <div class="settings-item desktop-settings-item hidden">
        <a class="dark-btn" href="#"><i class="fa-solid fa-moon"></i><span>Dark Mood</span></a>
        <a class="light-btn" href="#"><i class="fa-solid fa-sun"></i><span>light Mood</span></a>
        <% if (locals.loggedUser) { %>
        <a class="logout-btn" href="/logout"><i class="fa-solid fa-right-from-bracket"></i><span>Logout</span></a>
        <% } %>
     </div>
  </div>
</header >